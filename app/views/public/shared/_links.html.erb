<%- if controller_name != 'sessions' %>
  <%= content_tag :h4, "既に登録済みの方" %>
  <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。<br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= content_tag :h4, "会員登録がお済みでない方" %>
  <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行なってください。<br />
<% end %>